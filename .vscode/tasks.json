    {
      // Удаление папки сборки build
      "label": "Clean",
      "group": "build",
      "type": "shell",
      "command": "rm -rf build",
      "windows": {
        "command": "rm build -Recurse -Force"
      },
      "options": {
        "statusbar": {
          "color": "#ff8b8b",
          "label": "$(clear-all) Clean",
          "detail": "Clean ALL"
        }
      }
    }
